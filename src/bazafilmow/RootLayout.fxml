<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="BorderPane" prefHeight="500.0" prefWidth="600.0" style="-fx-border-width: 4;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bazafilmow.MainController">

   <center>
      <VBox prefHeight="512.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="newMovie" mnemonicParsing="false" onAction="#handleButtonAction" prefWidth="200.0" text="Stwórz Film">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="EditMovie" mnemonicParsing="false" onAction="#handleEditButtonAction" prefWidth="200.0" text="Edytuj Film">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="Look" mnemonicParsing="false" onAction="#PrzegladanieHandler" prefWidth="200.0" text="Przeglądaj filmy">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Button>
            <Button id="Sz1" fx:id="SzukajAktora" mnemonicParsing="false" onAction="#GoSzukaj" prefHeight="42.0" prefWidth="200.0" text="Edytuj Aktora">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Button>
            <Button id="Sz1" fx:id="EdytujRezysera" mnemonicParsing="false" onAction="#GoSzukajRezysera" prefHeight="42.0" prefWidth="200.0" text="Edytuj Rezysera">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="200.0" right="200.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <top>
      <Button fx:id="Muzyka" mnemonicParsing="false" onAction="#handleMusic" prefHeight="42.0" prefWidth="105.0" text="Music" BorderPane.alignment="BOTTOM_LEFT">
         <BorderPane.margin>
            <Insets left="10.0" top="10.0" />
         </BorderPane.margin>
      </Button>
   </top>
</BorderPane>
